<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/stylist_list_image"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/stylist_photo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_toRightOf="@+id/stylist_list_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/stylist_name"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/Black"
            android:layout_marginLeft="10dp"
            android:text="24-04-2014"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/stylist_phone"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/Gray"
            android:layout_marginLeft="10dp"
            android:text="Who is Mandela?"
            android:layout_below="@+id/stylist_name"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/stylist_email"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/Gray"
            android:layout_marginLeft="10dp"
            android:text="Who is Mandela?"
            android:layout_below="@+id/stylist_phone"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
